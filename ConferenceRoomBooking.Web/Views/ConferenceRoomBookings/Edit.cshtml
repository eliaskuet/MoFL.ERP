@model DataAL.Models.ConferenceRoomBooking

@{
    ViewData["Title"] = "Edit";
}

<h3>কনফারেন্স রুম বুকিং তথ্য পরিবর্তন</h3>
<hr />

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="font-weight-bold mb-0">কনফারেন্স রুম বুকিং সংক্রান্ত তথ্য সংশোধন</h4>
            </div>
            <div>
                <a asp-action="index" class="btn btn-outline-primary btn-icon-text btn-rounded btn-resize">
                    <i class="ti-arrow-left"></i>Back to list
                </a>
                <a asp-action="index" asp-controller="ConferenceRoomBookings" class="btn btn-outline-primary btn-icon-text btn-rounded btn-resize">
                    <i class="bi bi-house"></i>&nbsp;Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @* <h4 class="card-title">Add a Personal Information</h4> *@
                <div class="table-responsive pt-3">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ConferenceRoomBookingId" />
                        <div class="form-group">
                            <label asp-for="DateOfEvent" class="control-label"></label>
                            <input asp-for="DateOfEvent" class="form-control" />
                            <span asp-validation-for="DateOfEvent" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ChairpersonId" class="control-label"></label>
                            <select asp-for="ChairpersonId" class="form-control" asp-items="ViewBag.ChairpersonId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="TentativeEndTime" class="control-label"></label>
                            <input asp-for="TentativeEndTime" class="form-control" />
                            <span asp-validation-for="TentativeEndTime" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventTypeId" class="control-label"></label>
                            <select asp-for="EventTypeId" class="form-control" asp-items="ViewBag.EventTypeId"></select>
                        </div>
                        <input type="hidden" asp-for="OfficeId" />
                        <input type="hidden" asp-for="IsPublished" />

                        <br />
                        <div class="accordion" id="accordionZoomMeeting">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                        <strong> Zoom অনলাইন সভার তথ্য (ঐচ্ছিক)</strong>
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionZoomMeeting">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="ZoomMeetingId" class="control-label"></label>
                                                    <input asp-for="ZoomMeetingId" class="form-control" />
                                                    <span asp-validation-for="ZoomMeetingId" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="ZoomMeetingPasscode" class="control-label"></label>
                                                    <input asp-for="ZoomMeetingPasscode" class="form-control" />
                                                    <span asp-validation-for="ZoomMeetingPasscode" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ZoomMeetingLink" class="control-label"></label>
                                            <input asp-for="ZoomMeetingLink" class="form-control" />
                                            <span asp-validation-for="ZoomMeetingLink" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                        <strong> আরও অপশন (ঐচ্ছিক)</strong>
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="ContactPersonaName" class="control-label"></label>
                                                    <input asp-for="ContactPersonaName" class="form-control" />
                                                    <span asp-validation-for="ContactPersonaName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="ContactPersonMobile" class="control-label"></label>
                                                    <input asp-for="ContactPersonMobile" class="form-control" />
                                                    <span asp-validation-for="ContactPersonMobile" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="OfficeOrderUrl" class="control-label"></label>
                                            <input asp-for="OfficeOrderUrl" class="form-control" type="file" id="file" name="file" />
                                            <span asp-validation-for="OfficeOrderUrl" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <br />
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
