@model IEnumerable<DataAL.Models.ConferenceRoomBooking>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Upcoming";
    string message = "আপকামিং অনুষ্ঠানের সময়সূচী";
    int count = 1;
    bool isHeadRendered = false;
}


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="d-flex justify-content-between align-items-center">
            <div><h2>@message</h2></div>
            <div>
                <a asp-action="create" class="btn btn-outline-primary btn-icon-text btn-rounded btn-resize">
                    <i class="ti-desktop"></i>&nbsp;কনফারেন্স রুম বুকিং দিন
                </a>
                <a href="#" class="btn btn-outline-success btn-icon-text btn-rounded btn-resize">
                    <i class="bi bi-envelope-arrow-up"></i>&nbsp;গুগল ক্যালেন্ডারে sync
                </a>
                <a asp-action="index" asp-controller="ConferenceRoomBookings" class="btn btn-outline-primary btn-icon-text btn-rounded btn-resize">
                    <i class="bi bi-house"></i>&nbsp;Dashboard
                </a>
            </div>
        </div>
    </div>
</div>
<br />
@if (!Model.Any())
{
    <div class="alert alert-danger">
        No upcoming events found.
    </div>
}
else
{
    <div class="alert alert-success">
        <h3> মোট আপকামিং অনুষ্ঠানের সময়সূচী: @Model.Count()</h3>
    </div>
    <table class="table table-hover">
        @{
            var modelList = Model.ToList();
            var first = modelList.First();
            var currentList = modelList.Where(m => m.DateOfEvent.Date == first.DateOfEvent.Date).ToList();

            @if (!isHeadRendered)
            {
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateOfEvent)
                        </th>
                        <th style="width: 30%;">
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ChairpersonId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TentativeEndTime)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EventTypeId)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                isHeadRendered = true;
            }
            while (currentList.Any())
            {
                <tbody>
                    <tr class="table-active">
                        <td colspan="7">
                            <strong class="text-success" style="font-size: large;"> @currentList.First().DateOfEvent.ToString("dd-MM-yyyy") তারিখে @currentList.Count-টি অনুষ্ঠান</strong>
                        </td>
                    </tr>
                    @foreach (var item in currentList)
                    {
                        <tr>
                            <td>
                                @(count++)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateOfEvent.TimeOfDay)
                            </td>
                            <td style="width: 30%; word-wrap: break-word !">
                                <a asp-action="Details" asp-route-id="@item.ConferenceRoomBookingId">
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Chairperson.ChairpersonName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TentativeEndTime.TimeOfDay)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EventType.Name)
                            </td>
                            <td>
                                <a asp-action="Shift" asp-route-id="@item.ConferenceRoomBookingId"><i class="bi bi-repeat text-danger"></i>Shift</a>
                                <a asp-action="Edit" asp-route-id="@item.ConferenceRoomBookingId"><i class="bi bi-pencil text-success"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ConferenceRoomBookingId"><i class="bi bi-trash text-danger"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
                modelList = modelList.Except(currentList).ToList();
                //first = modelList.First();
                currentList = modelList.Where(m => m.DateOfEvent.Date == modelList.Min(x => x.DateOfEvent.Date)).ToList();
            }
        }
    </table>
}
