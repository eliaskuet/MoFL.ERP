<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConferenceRoomBooking.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConferenceRoomBooking.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MoFL-ERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">হোম</a>
                        </li>
                        <li class="nav-item">
                            <strong>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="bookingsystem">সম্মেলন কক্ষ বুকিং সিস্টেম</a>
                            </strong>
                        </li>
                        <li class="nav-item">
                            <strong>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="documentms">ডকুমেন্ট ম্যানেজমেন্ট</a>
                            </strong>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">ব্যবহার নির্দেশিকা</a>
                        </li>
                    </ul>
                    <div class="navbar-text">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-area="" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                                <button type="submit" class="btn btn-link navbar-btn">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="" asp-page="/Account/Login" class="btn btn-link navbar-btn">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MoFL-ERP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
